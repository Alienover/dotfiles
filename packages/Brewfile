# Enable it when in China
# tap "homebrew/cask", "https://mirrors.ustc.edu.cn/homebrew-cask.git"
# tap "homebrew/core", "https://mirrors.ustc.edu.cn/homebrew-core.git"

# set arguments for all 'brew install --cask' commands
cask_args appdir: "~/Applications", require_sha: false

# Clone of cat(1) with syntax highlighting and Git integration
brew "bat"

# Get, unpack, build, and install modules from CPAN
brew "cpanminus"

# Fast and simple Node.js version manager
brew "fnm"

# Simple, fast and user-friendly alternative to find
brew "fd"

# Distributed revision control system
brew "git"

# Improved top (interactive process viewer)
brew "htop"

# Lightweight and flexible command-line JSON processor
brew "jq"

# Open source relational database management system
brew "mysql-client"

# Ambitious Vim-fork focused on extensibility and agility
brew "neovim"

# SSL/TLS VPN implementing OSI layer 2 or 3 secure network extension
brew "openvpn"

# Highly capable, feature-rich programming language
brew "perl"

# Go support for Google's protocol buffers
brew "protoc-gen-go"

# Python version management
brew "pyenv"

# Alternative to pyenv for managing virtualenvs
brew "pyenv-virtualenvwrapper"

# Persistent key-value database, with built-in net interface
brew "redis"

# Search tool like grep and The Silver Searcher
brew "ripgrep"

# Terminal multiplexer
brew "tmux"

# Lightweight BitTorrent client
brew "transmission-cli"

# Internet file retriever
brew "wget"

# UNIX shell (command interpreter)
brew "zsh"

# Simple hotkey-daemon for macOS.
brew "koekeishiya/formulae/skhd"

# A tiling window manager for macOS based on binary space partitioning.
brew "koekeishiya/formulae/yabai"

# A window border system for macOS
brew "felixkratz/formulae/borders"

## GUI application

# WeChat for mac
cask "wechat"

# Utility to hide menu bar items
cask "hiddenbar"

# Web browser
cask "google-chrome"

# Music streaming service
cask "spotify"

# GPU-based terminal emulator
cask "kitty"

# Multimedia player
cask "vlc"

# Free and open-source media player
cask "iina"

# Binary releases of VS Code without MS branding/telemetry/licensing
cask "vscodium"

# File archiver
cask "keka"

# System monitor for the menu bar
cask "stats"

# Tool to control external monitor brightness & volume
cask "monitorcontrol"

# Control your tools with a few keystrokes
cask "raycast"
