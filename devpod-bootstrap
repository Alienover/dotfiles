#!/bin/bash

DOT_DIR="$(dirname $(readlink -f "$0"))/dotfiles"

dotfiles=(
  nvim
  tmux
  zsh
  shell
  user_scripts
  tmuxifier
  gnupg
  ssh
)

cd $DOT_DIR > /dev/null

for file in "${dotfiles[@]}"; do
  echo -e "Stowing $file ..."
  stow $file --no-folding
done

cd - > /dev/null

echo -e "Stow Done!"

if command -v nvim >/dev/null 2>&1; then
  nvim --headless "+Lazy! restore" +qa
fi
