#! /usr/bin/env bash
set -e

[ -f "$HOME/.bashrc" ] && rm "$HOME/.bashrc"
[ -f "$HOME/.profile" ] && rm "$HOME/.profile"

dotfiles=(
  devpod
  nvim
  tmux
  shell
  user_scripts
  tmuxifier
  git
)

. ./setup "${dotfiles[@]}"

mise plugins install neovim

mise install

mise exec -c 'nvim --headless "+Lazy! restore" +qa'
