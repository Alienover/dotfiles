#!/bin/bash

INS_LOGCENTER="logcenter"

INSTANCES="$INS_LOGCENTER\n"

pick() {
    SELECTED_INS=$(echo -e "$INSTANCES" | grep "$1")
}

get_ip() {
    case $1 in 
	"$INS_LOGCENTER")
	    SELECTED_IP="172.1.1.230"
	    ;;
    esac
}


_ssh() {
    if [ $# -ne 0 ]; then
        TERM=xterm-256color ssh $USER@$1
    else
        echo "No Instance Found..."
    fi
}

logging() {
    echo ""
    echo "Instance: " $1
    echo "IP:       " $2
    echo ""
}

main() {
    pick
    get_ip $SELECTED_INS
    logging $SELECTED_INS $SELECTED_IP

    _ssh $SELECTED_IP
}

main
