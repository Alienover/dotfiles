export GUI_PRIMARY=$GUI_BLUE
export GUI_SECONDARY=#3b4261


print_segment() {
  echo "%F{$1}$1%f %K{$1}($1)%k"
}

print_c() {
  local GUI_C=""
  local CTERM_C=""
  local CTERM16_C=""

  if [[ $# -gt 1 ]]; then
    GUI_C=$(print_segment "$2")
  fi

  if [[ $# -gt 2 ]]; then
    CTERM_C=$(print_segment "$3")
  fi

  if [[ $# -gt 3 ]]; then
    CTERM16_C=$(print_segment "$4")
  fi

  print -cP $1 "$GUI_C" "$CTERM_C" "$CTERM16_C"
}

