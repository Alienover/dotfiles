#! /usr/bin/env zsh

# Load theme from kitty config
function load_theme() {
  local kitty_dir="$HOME/.config/kitty"

  if [[ ! -f "$kitty_dir/theme.sh" ]]; then
    source "$kitty_dir/theme-gen.sh"
  fi

  source "$kitty_dir/theme.sh"
}

load_theme

